{
  "name": "ntclarke",
  "version": "0.1.0",
  "private": true,
  "description": "Neil Clarke Portfolio Site",
  "main": "./dist/server.js",
  "scripts": {
    "prettier": "prettier --config .prettierrc \"src/**/*.ts\" --write",
    "lint": "eslint . --ext .ts",
    "sass": "sass --watch src/scss/index.scss:src/public/css/style.css -I node_modules",
    "build-sass": "sass src/scss/index.scss:src/public/css/style.css -I node_modules",
    "build-sass-broken": "node-sass src/scss/index.scss src/public/css/style.css --importer node_modules/node-sass-import",
    "start": "node ./dist/server.js",
    "dev": "nodemon",
    "clean": "rm -rf dist/ || true",
    "build:linux": "npm run clean && npm run build-sass && chmod +x ./scripts/build.sh && ./scripts/build.sh",
    "build:windows": "npm run clean && npm run build-sass && chmod +x ./scripts/build_windows.sh && sh ./scripts/build_windows.sh",
    "prod": "npm run build && node ./dist/server.js",
    "prod:windows": "npm run build:windows && node ./dist/server.js",
    "tsc": "tsc",
    "deploy": "npm run build && chmod +x ./scripts/deploy.sh && ./scripts/deploy.sh",
    "deploy:windows": "npm run build:windows && chmod +x ./scripts/deploy.sh && sh ./scripts/deploy.sh",
    "postinstall": "chmod +x ./scripts/heroku.sh && ./scripts/heroku.sh"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "@popperjs/core": "^2.9.2",
    "@types/ejs": "^3.0.6",
    "@types/express-ejs-layouts": "^2.3.2",
    "@types/serve-favicon": "^2.5.2",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.2",
    "cookie-parser": "~1.4.4",
    "db-migrate": "^0.11.12",
    "db-migrate-pg": "^1.2.2",
    "debug": "~2.6.9",
    "dompurify": "^2.2.8",
    "dotenv": "^9.0.2",
    "ejs": "^3.1.6",
    "express": "^4.19.2",
    "express-ejs-layouts": "^2.5.0",
    "express-validator": "^7.0.1",
    "gsap": "^3.11.4",
    "http-errors": "^1.8.0",
    "jquery": "^3.6.0",
    "marked": "^12.0.2",
    "morgan": "~1.9.1",
    "nodemailer": "^6.9.13",
    "nodemon": "~3.0.0",
    "serve-favicon": "^2.5.0",
    "slug": "^5.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "winbox": "^0.1.92"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/create-error": "^0.3.30",
    "@types/dompurify": "^2.2.2",
    "@types/express": "^4.17.11",
    "@types/http-errors": "^1.8.0",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^7.14.11",
    "@types/slug": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.0",
    "tsc-watch": "^6.2.0"
  },
  "engines": {
    "node": "^16.13.2",
    "npm": "^8.1.2"
  }
}
