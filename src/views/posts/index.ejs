<div class="container">
	<header class="blog-header py-3">
	  <div class="row flex-nowrap justify-content-between align-items-center">
		
	  </div>
	</header>
  
	<main class="container">
		<div class="p-4 p-md-5 mb-4 text-white rounded blog-hero">
			<div class="row">
				<div class="col-md-8 px-0">
					<h1 class="display-4 fst-italic">BLOG</h1>
					<hr>
					<p class="lead my-3">
						I've never been much of a blogger but this will be a place to put announcements, my thoughts and maybe
						ideas for future projects that I likely won't start working on until my current
						queue is more empty.
					</p>
				</div>
				<div class="col-lg-4 mr-auto d-none d-lg-block">
                    <div
                        style="
                            height: 100%;
                            display: flex;
                            flex-direction: column;
                            justify-content: center;
							align-items: center;
                        "
                    >
                        <img width="75%" src="/assets/img/blog.svg" />
                    </div>
                </div>
			</div>
		</div>

		<div class="rounded-white px-md-3 py-md-5 mb-3">
			<div class="post-featured">
				<div class="row border g-0 rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
					<div class="col position-static post-thumb">

						<h1 class="post-featured-title m-0 m-2"><%= posts[0].title %></h4>
							<h3 class="m-2 mt-0 text-muted"><%= posts[0].createdAt.toLocaleDateString() %></h4>

						<div class="border post-filler m-2 p-1">
							<div class="post-featured-body">
								<p class="lead"><%= posts[0].summary %></p>
							</div>
							<div>
								<% posts[0].tags.forEach( tag => { %> 
									<span class = "tag"> <%= tag %>  </span>
								<% }); %> 
							</div>
						</div>

						<div>
							<a href="/blog/<%= posts[0].slug %>" class="btn btn-outline-dark m-2">Read More</a>
						</div>
					</div>
					<div class="col-auto d-none d-lg-block lavender-bg">
						<img width="400" height="500" src="<%= posts[0].thumb ? posts[0].thumb : "/assets/img/default_blog_image.svg" %>" alt="">
					</div>
				</div>
			</div>
	
			<div class="row mb-2">
				<% posts.slice(1).forEach( post => { %>
					<%- include("post_thumb", { post: post });%> 
				<% }); %> 
			</div>

		</div>
	</main>
</div>