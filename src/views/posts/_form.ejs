<div class="form-group">
	<label for="title">Title</label>
	<input required value="<%= post.title %>" type="text" name="title" id="title" class="form-control">
</div>

<div class="form-group">
	<label for="summary">Summary</label>
	<textarea required name="summary" id="summary" cols="30" rows="10" class="form-control">
		<%= post.summary %>
	</textarea>
</div>

<div class="form-group">
	<label for="content">Content (Markdown)</label>
	<textarea required name="content" id="content" cols="30" rows="10" class="form-control">
		<%= post.content %>
	</textarea>
</div>


<a href="/posts" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>