<div class="" style="border: 2px solid #292929; border-radius: 3px; flex-grow: 1; width: 450px;">
	<h4 class="post-thumb-title mb-2 text-white
	greyscale" style="padding: 16px;"><%= post.title %></h4>
		
		<div class="row position-static m-2" style="padding: 8px; justify-content: space-between;">
			<div style="border: 1px solid grey; padding: 8px; justify-content: space-between; flex: 1;" class="col">
				<div>
					<div class="mb-1 text-muted"><%= post.createdAt.toLocaleDateString() %></div>
					<hr />
					<div class="post-filler p-1 mb-3 border">
						<div>
							<p><%= post.summary %></p>
						</div>
		
						<div>
							<% post.tags.forEach( tag => { %> 
								<span class = "tag"> <%= tag %>  </span>
							<% }); %> 
						</div>
					</div>
				</div>
				<div>
					<a href="/blog/<%= post.slug %>" class="btn btn-outline-dark mb-2">Read More</a>
				</div>
			</div>
			<div class="col-auto d-none d-lg-block greyscale">
				<img width="200" height="250" src="<%= post.thumb ? post.thumb : "/assets/img/default_blog_image.svg" %>" alt="">
			  </div>
		</div>
</div>