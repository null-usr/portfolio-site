<div class="container">
	<header class="blog-header py-3">
		<div class="row flex-nowrap justify-content-between align-items-center">
		</div>
	</header>

  	<main class="container">

		<!-- Header -->
		<div class="row mb-4">
			<div class="col-lg-8">
				<div class="p-4 p-md-5 mb-4 text-white rounded home-hero h-100">
					<h1 class="display-4 fst-italic">Welcome to v1.0!</h1>
					<hr>
					<div class="col-md-8 px-0">
						<p class="lead my-3">
							And welcome to my website!
							<br>I'm a Software Engineer looking to find my way in this world and I hope to see as much of it as I can before I go.
							<br><br>And as I learn more, this site will change too.
						</p>
						<p class="lead mb-0"><a href="/about" class="text-white fw-bold go-to-bottom mb-3">About me...</a></p>
					</div>
				</div>
			</div>
			<div class="text-black col-lg-4 d-none d-lg-block border">
				<div class="home-logo ml-0 pl-0" title="Placeholder Graphic">
					<object class="" title="The gears of time stop for no one..." width="200px" type="image/svg+xml" data="/assets/img/simple_gear_animation.svg">
					</object>
				</div>
			</div>
		</div>

		<!-- Featured post and project-->
		<div class="row mb-2">
			<div class="col-md-6">
				<div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
					<h2 class="d-inline-block p-2 mb-0 greyscale fst-italic text-white">FEATURED POST</h2>
					<hr>
					<div class="col p-1 m-2 post-thumb position-static border">
						<h3 class="mb-0"><%= featured_post.title %> </h3>
						<hr>
						<div class="mb-1 text-muted"><%= featured_post.createdAt.toLocaleDateString() %> </div>
						<div>
							<p class="card-text"><%= featured_post.summary %> </p>
						</div>
						<div class="post-filler"></div>
						<div class="mb-0">
							<a href="/blog/<%=featured_post.slug%> " class="btn btn-outline-dark mb-2">Continue reading</a>
						</div>
					</div>
					<div class="col-auto d-none d-lg-block border-left">
						<!-- <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg> -->
						<img width="200" height="250" src="<%= featured_post.thumb ? featured_post.thumb : "/assets/img/default_blog_image.svg" %>" alt="">
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
					<h2 class="d-inline-block p-2 mb-0 text-white fst-italic greyscale">FEATURED PROJECT</h2>
					<hr>
					<div class="col p-1 m-2 post-thumb position-static border m-2">
						<h3 class="mb-0 "><%= featured_project.name %></h3>
						<hr>
						<!-- <div class="mb-1 text-muted">Nov 11</div> -->
						<div>
							<p class="card-text"><%= featured_project.summary %> </p>
						</div>
						<div>
							[
							<% featured_project.tags.forEach( tag => { %> 
								<span class="tag"><%= tag %></span>
							<% }); %> 
							]
						</div>
						<div class="post-filler"></div>
						<div>
							<a href="/projects/<%=featured_project.slug %> " class="btn btn-outline-dark mb-2">Continue reading</a>
						</div>
					</div>
					<div class="col-auto d-none d-lg-block">
						<!-- <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg> -->
						<img width="200" height="250" src="<%= featured_project.thumb ? featured_project.thumb : "/assets/img/default_project_image.svg" %>" alt="">
					</div>
				</div>
			</div>
		</div>

		<!-- Link to projects and blog -->
		<div class="row mb-2">
			<div class="col-md-6 text-center">
				<p class="m-2">
					<a href="/blog" class="btn btn-outline-dark">Other Blog Posts</a>
				</p>
			</div>
			<div class="col-md-6 text-center">
				<p class="m-2">
					<a href="/projects" class="btn btn-outline-dark">Other Projects</a>
				</p>
			</div>
		</div>
		<hr>
		<!-- Skills pane -->
		<div class="row mb-4">
			<div class="rounded-white px-md-3 pb-md-5 pt-md-3">

				<!-- Title section -->
				<div class="text-center">
					<h1 class="fst-italic">Arsenal</h1>
					<p>
						Suite of some of the programming languages, tools and software that
						I've encountered while working on my hobby projects and 
						throughout my professional career.
					</p>
				</div>
				<hr>
				<div class="skill-container text-white">

					<div class="skill-box rounded-black p-3">

						<div class="skill-header">
								<span class="lavender pt-2">
									<div class="diamond"></div>
								</span>
								<h3>Languages</h3>
								<span class="lavender pt-2">
									<div class="diamond"></div>
								</span>
						</div>
						
						<div class="text-center">
							<img width="100px" src="/assets/img/code.svg" alt="">
						</div>
						
						<div class="text-center border p-3">
							<span class="tag lead">C++</span>,
							<span class="tag lead">Lua</span>,
							<span class="tag lead">TypeScript</span>,
							<span class="tag lead">HTML</span>,
							<span class="tag lead">CSS</span>
						</div>
					</div>
					<div class="skill-box rounded-black p-3">
						
						<div class="skill-header">
								<span class="lavender pt-2">
									<div class="diamond"></div>
								</span>
								<h3>Frameworks/Engines</h3>
								<span class="lavender pt-2">
									<div class="diamond"></div>
								</span>
						</div>

						<div class="text-center">
							<img width="100px" src="/assets/img/cogs.svg" alt="">
						</div>
						
						<div class="text-center border p-3">
							<span class="tag lead">Node.js</span>,
							<span class="tag lead">Unreal Engine 4</span>,
							<span class="tag lead">Ruby on Rails</span>,
							<span class="tag lead">Angular</span>,
							<span class="tag lead">OpenCV</span>
						</div>
					</div>
					<div class="skill-box rounded-black p-3">
						
						<div class="skill-header">
								<span class="lavender pt-2">
									<div class="diamond"></div>
								</span>
								<h3>Tools & Tech</h3>
								<span class="lavender pt-2">
									<div class="diamond"></div>
								</span>
						</div>

						<div class="text-center">
							<img width="75px" src="/assets/img/wrench.svg" alt="">
						</div>
						
						<div class="text-center border p-3">
							<span class="tag lead">Bash</span>,
							<span class="tag lead">PostgreSQL</span>,
							<span class="tag lead">Arduino</span>,
							<span class="tag lead">GIMP</span>,
							<span class="tag lead">Inkscape</span>,
							<span class="tag lead">Blender</span>
						</div>
					</div>
					
				</div>
			</div>
		</div>

		
  	</main>
</div>
